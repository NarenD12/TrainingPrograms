<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:annotation-config />

	<bean id="custAddress2" class="com.infinite.spring2task.User" scope="singleton">
		<property name="name" value="Naren" />
		<property name="city" value="Chennai" />	
	</bean>
	<bean id="const" class="com.infinite.spring2task.ConstructorInjection" scope="singleton">
		<constructor-arg name="firstName" value="Naren " />
		<constructor-arg name="lastName" value="Dandamudi" />
	</bean>
</beans>